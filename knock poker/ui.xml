<TableLayout
    id="playTable"
    offsetXY="750 60"
    height="150"
    width="175"
    rowBackgroundColor="White"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false">
    <Row id="row1" preferredHeight="80">
        <Cell>
            <Button
                id="deal"
                onClick="dealCards"
                fontsize="24"
            >Deal</Button>
        </Cell>
        <Cell>
            <Button
                id="gather"
                onClick="gather"
                fontsize="24"
                color="#FF8080"
            >Reset Deck</Button>
        </Cell>
    </Row>
    <Row>
        <Cell columnspan="2">
            <Button
                id="knock"
                onClick="knock"
                fontsize="24"
                interactable="false"
                color="#44FF44"
            >Knock</Button>
        </Cell>
    </Row>
</TableLayout>

<Button
    id="spec"
    onClick="spectate"
    width="150"
    height="50"
    fontsize="24"
    offsetXY="750 250"
>Spectate</Button>

<Button
    id="clr"
    onClick="clear_buttons"
    width="100"
    height="50"
    fontsize="18"
    offsetXY="750 -400"
>Clear Counters</Button>

<Button
    id="cncl_knck"
    onClick="cancelKnock"
    width="100"
    height="50"
    fontsize="18"
    offsetXY="750 -300"
>Undo Knock</Button>

<TableLayout
    id="override"
    offsetXY="0 0"
    height="150"
    width="150"
    rowBackgroundColor="White"
    allowDragging="true"
    returnToOriginalPositionWhenReleased="false"
    active="false">
    <Row id="row1" preferredHeight="80">
        <Cell>
            <Button
                id="override_button"
                onClick="overrideKnock"
                fontsize="24"
            >Override Knock</Button>
        </Cell>
    </Row>
    <Row>
        <Cell>
            <Button
                id="cancel"
                onClick="cancelOverride"
                fontsize="24"
                color="#FF8080"
            >Cancel</Button>
        </Cell>
    </Row>
</TableLayout>
